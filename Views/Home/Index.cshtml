@model IEnumerable<NinjaCore.Models.User>
@{
    ViewBag.Title = "All Users";
}

<a asp-action="Create" class="btn btn-primary float-right mt-5 mr-3 mb-3">Add New User</a>
<br />
<table class="table table-bordered text-center">
    <thead>
        <tr><td>First Name</td><td>Last Name</td><td>Email</td><td>Birth Date</td><td></td></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td><a role="button" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>            
            </tr>
        }
    </tbody>
</table>
